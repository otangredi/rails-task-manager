<h1 class="p-3"><%= @task.title %></h1>
<p class="bg-secondary bg-opacity-25 p-3 border rounded"><%= @task.details %></p>

<div class="px-3">
  <% if @task.completed == false %>
    <p><i class="fa-regular fa-square"></i> This task is not completed yet</p>
  <% else %>
    <p><i class="fa-regular fa-square-check"></i> Completed</p>
  <% end %>
</div>

<div class="px-3">
  <i class="fa-solid fa-arrow-rotate-left text-primary"></i>
  <%= link_to 'Back to list', tasks_path %>
</div>

<div class="px-3">
  <i class="fa-solid fa-pen-to-square text-primary"></i>
  <%= link_to 'Edit this task', edit_task_path(@task) %>
</div>

<div class="px-3">
  <i class="fa-solid fa-trash text-primary"></i>
  <%= link_to 'Delete this task',
      task_path(@task),
      data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this task?' } %>
</div>
